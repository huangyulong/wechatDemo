.detail-title {
  font-size: 40rpx;
  color: lightsalmon;
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-bottom: 1px solid #ccc;
}
.detail-title image {
  width: 80rpx;
  height: 80rpx;
  margin-right: 20rpx;
}
.detail-text {
  font-size: 26rpx;
  color: blueviolet;
  text-shadow: 0 0 #333;
  text-align: center;
  margin-top: 20rpx;
}
.detail-image {
  width: 90%;
  height: 500rpx;
  margin-top: 20rpx;
  margin-left: 5%;
  border: 1px solid #ccc;
}
.detail-image image {
  width: 100%;
  height:100%;
}